<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>AFK Earnings - <%= typeof settings !== 'undefined' && settings.name ? settings.name : 'CLOUD CRASH' %></title>
  <link rel="icon" type="image/x-icon" href="../assets/favicon.png"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700;900&family=Exo+2:wght@300;400;500;600&display=swap" rel="stylesheet"/>
  <style>
    :root {
      --bg-primary: #0b0b1e;
      --bg-secondary: #0f0f2b;
      --card-bg: rgba(15, 15, 43, 0.6);
      --glass-border: rgba(100, 200, 255, 0.15);
      --neon-cyan: #00f2ff;
      --neon-purple: #b14bff;
      --neon-pink: #ff4da6;
      --text-primary: #e0f7ff;
      --text-muted: #8ba0c7;
      --danger: #ff3366;
      --glow-cyan: 0 0 15px rgba(0, 242, 255, 0.6), 0 0 30px rgba(0, 242, 255, 0.3);
      --glow-purple: 0 0 15px rgba(177, 75, 255, 0.6), 0 0 30px rgba(177, 75, 255, 0.3);
      --transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
      color: var(--text-primary);
      font-family: 'Exo 2', sans-serif;
      min-height: 100vh;
      overflow-x: hidden;
      position: relative;
    }

    /* Animated Background */
    #bg-canvas {
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      z-index: -2;
    }

    .grid-overlay {
      position: fixed;
      inset: 0;
      background: 
        linear-gradient(90deg, rgba(0, 242, 255, 0.08) 1px, transparent 1px),
        linear-gradient(rgba(0, 242, 255, 0.08) 1px, transparent 1px);
      background-size: 50px 50px;
      z-index: -1;
      animation: gridMove 20s linear infinite;
    }

    @keyframes gridMove {
      0% { transform: translate(0, 0); }
      100% { transform: translate(50px, 50px); }
    }

    /* Sidebar */
    .sidebar {
      width: 280px;
      height: 100vh;
      position: fixed;
      left: 0;
      top: 0;
      background: rgba(11, 11, 30, 0.8);
      backdrop-filter: blur(16px);
      border-right: 1px solid var(--glass-border);
      padding: 24px 16px;
      z-index: 100;
      transition: var(--transition);
    }

    .logo {
      font-family: 'Orbitron', sans-serif;
      font-weight: 900;
      font-size: 1.6rem;
      letter-spacing: 2px;
      text-align: center;
      margin-bottom: 40px;
      background: linear-gradient(90deg, var(--neon-cyan), var(--neon-purple));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow: var(--glow-cyan);
    }

    .nav-item {
      display: flex;
      align-items: center;
      padding: 14px 18px;
      margin: 6px 8px;
      border-radius: 12px;
      color: var(--text-muted);
      text-decoration: none;
      font-weight: 500;
      transition: var(--transition);
      position: relative;
      overflow: hidden;
    }

    .nav-item i {
      width: 24px;
      margin-right: 14px;
      font-size: 1.1rem;
    }

    .nav-item:hover {
      background: rgba(0, 242, 255, 0.12);
      color: var(--neon-cyan);
      transform: translateX(4px);
      box-shadow: var(--glow-cyan);
    }

    .nav-item.active {
      background: linear-gradient(135deg, rgba(0, 242, 255, 0.2), rgba(177, 75, 255, 0.2));
      color: white;
      font-weight: 600;
      box-shadow: var(--glow-purple);
      border: 1px solid rgba(0, 242, 255, 0.3);
    }

    .nav-item::before {
      content: '';
      position: absolute;
      top: 0; left: -100%;
      width: 100%; height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
      transition: 0.6s;
    }

    .nav-item:hover::before {
      left: 100%;
    }

    /* Main Content */
    .main-content {
      margin-left: 280px;
      padding: 24px;
      min-height: 100vh;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px 24px;
      background: var(--card-bg);
      backdrop-filter: blur(16px);
      border: 1px solid var(--glass-border);
      border-radius: 16px;
      margin-bottom: 24px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .user-avatar {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      border: 2px solid var(--neon-cyan);
      box-shadow: var(--glow-cyan);
      object-fit: cover;
    }

    .user-details h3 {
      font-family: 'Orbitron', sans-serif;
      font-size: 1.1rem;
      font-weight: 700;
      color: var(--neon-cyan);
      text-shadow: var(--glow-cyan);
    }

    .user-details p {
      font-size: 0.9rem;
      color: var(--text-muted);
    }

    .logout-btn {
      background: linear-gradient(135deg, var(--danger), #cc0055);
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: var(--transition);
      box-shadow: 0 4px 15px rgba(255, 51, 102, 0.4);
    }

    .logout-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(255, 51, 102, 0.6);
    }

    /* Card */
    .card {
      background: var(--card-bg);
      backdrop-filter: blur(16px);
      border: 1px solid var(--glass-border);
      border-radius: 20px;
      padding: 28px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
      position: relative;
      overflow: hidden;
      transition: var(--transition);
    }

    .card::before {
      content: '';
      position: absolute;
      top: -50%; left: -50%;
      width: 200%; height: 200%;
      background: conic-gradient(from 0deg, transparent, var(--neon-cyan), transparent);
      animation: rotate 8s linear infinite;
      opacity: 0.1;
      z-index: 0;
    }

    @keyframes rotate {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .card-content {
      position: relative;
      z-index: 1;
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .card-title {
      font-family: 'Orbitron', sans-serif;
      font-size: 1.4rem;
      font-weight: 700;
      background: linear-gradient(90deg, var(--neon-cyan), var(--neon-purple));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow: var(--glow-cyan);
    }

    .card-icon {
      font-size: 1.6rem;
      color: var(--neon-cyan);
      text-shadow: var(--glow-cyan);
    }

    /* AFK Section */
    .afk-container {
      text-align: center;
      padding: 20px 0;
    }

    .afk-icon {
      font-size: 5rem;
      color: var(--neon-cyan);
      margin-bottom: 16px;
      animation: float 3s ease-in-out infinite;
      text-shadow: var(--glow-cyan);
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    .afk-title {
      font-family: 'Orbitron', sans-serif;
      font-size: 2.4rem;
      font-weight: 900;
      margin-bottom: 12px;
      background: linear-gradient(90deg, var(--neon-cyan), var(--neon-purple), var(--neon-pink));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow: var(--glow-purple);
    }

    .afk-subtitle {
      color: var(--text-muted);
      max-width: 600px;
      margin: 0 auto 32px;
      font-size: 1.05rem;
      line-height: 1.6;
    }

    .progress-container {
      max-width: 500px;
      margin: 32px auto;
    }

    .progress-bar {
      height: 16px;
      background: rgba(0, 242, 255, 0.1);
      border: 1px solid var(--glass-border);
      border-radius: 8px;
      overflow: hidden;
      position: relative;
    }

    .progress-fill {
      height: 100%;
      width: 0%;
      background: linear-gradient(90deg, var(--neon-cyan), var(--neon-purple));
      border-radius: 8px;
      transition: width 0.6s ease;
      box-shadow: var(--glow-cyan);
      position: relative;
    }

    .progress-fill::after {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
      animation: shimmer 2s infinite;
    }

    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }

    .progress-text {
      display: flex;
      justify-content: space-between;
      margin-top: 8px;
      font-size: 0.95rem;
      color: var(--text-muted);
    }

    .afk-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 20px;
      max-width: 700px;
      margin: 40px auto 0;
    }

    .stat-card {
      background: rgba(0, 242, 255, 0.08);
      border: 1px solid var(--glass-border);
      border-radius: 16px;
      padding: 20px;
      text-align: center;
      transition: var(--transition);
      backdrop-filter: blur(8px);
    }

    .stat-card:hover {
      transform: translateY(-6px);
      box-shadow: var(--glow-cyan);
      border-color: var(--neon-cyan);
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: var(--neon-cyan);
      text-shadow: var(--glow-cyan);
      font-family: 'Orbitron', sans-serif;
    }

    .stat-label {
      font-size: 0.9rem;
      color: var(--text-muted);
      margin-top: 6px;
    }

    /* Skeleton */
    .skeleton-loader { display: none; }
    #content { opacity: 0; transition: opacity 0.5s ease; }
    .loaded #content { opacity: 1; }

    /* Responsive */
    @media (max-width: 992px) {
      .sidebar { width: 80px; padding: 20px 8px; }
      .logo, .nav-item span { display: none; }
      .nav-item { justify-content: center; }
      .main-content { margin-left: 80px; }
    }

    @media (max-width: 576px) {
      .header { flex-direction: column; gap: 16px; text-align: center; }
      .afk-title { font-size: 2rem; }
      .afk-stats { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>

  <!-- Animated Background -->
  <canvas id="bg-canvas"></canvas>
  <div class="grid-overlay"></div>

  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo"><%= typeof settings !== 'undefined' && settings.name ? settings.name : 'CLOUD CRASH' %></div>
    <a href="/dashboard" class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>">
      <i class="fas fa-home"></i><span>Dashboard</span>
    </a>
    <a href="/servers" class="nav-item <%= currentPage === 'servers' ? 'active' : '' %>">
      <i class="fas fa-server"></i><span>My Servers</span>
    </a>
    <a href="/afk" class="nav-item <%= currentPage === 'afk' ? 'active' : '' %>">
      <i class="fas fa-coins"></i><span>AFK Earnings</span>
    </a>
    <a href="/profile" class="nav-item <%= currentPage === 'profile' ? 'active' : '' %>">
      <i class="fas fa-id-card"></i><span>Profile</span>
    </a>
    <a href="/store" class="nav-item <%= currentPage === 'store' ? 'active' : '' %>">
      <i class="fas fa-microchip"></i><span>Resources</span>
    </a>
    <a href="/security" class="nav-item <%= currentPage === 'settings' ? 'active' : '' %>">
      <i class="fas fa-cog"></i><span>Settings</span>
    </a>
    <% if (user && user.role === 'admin') { %>
      <a href="/admin" class="nav-item <%= currentPage === 'admin' ? 'active' : '' %>">
        <i class="fas fa-shield-alt"></i><span>Admin</span>
      </a>
    <% } %>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <div class="header">
      <div class="user-info">
        <% if (user && user.avatar) { %>
          <img src="<%= user.avatar %>" alt="Avatar" class="user-avatar">
        <% } else { %>
          <div class="user-avatar" style="background: #1a1a3a; display:flex; align-items:center; justify-content:center; font-size:1.2rem;">
            <i class="fas fa-user"></i>
          </div>
        <% } %>
        <div class="user-details">
          <h3><%= username || 'Guest' %></h3>
          <p>Balance: <span id="user-balance"><%= coins ? coins.toFixed(2) : '0.00' %></span> coins</p>
        </div>
      </div>
      <button class="logout-btn" onclick="location.href='/logout'">
        <i class="fas fa-sign-out-alt"></i> Logout
      </button>
    </div>

    <!-- Skeleton Loader -->
    <div class="skeleton-loader" id="skeleton">
      <div class="card" style="padding:40px;">
        <div style="height:28px; width:200px; background:rgba(0,242,255,0.2); border-radius:8px; margin-bottom:20px;"></div>
        <div style="height:80px; width:80px; background:rgba(0,242,255,0.2); border-radius:50%; margin:0 auto 20px;"></div>
        <div style="height:36px; width:320px; background:rgba(0,242,255,0.15); border-radius:8px; margin:0 auto 12px;"></div>
        <div style="height:20px; width:420px; background:rgba(0,242,255,0.1); border-radius:8px; margin:0 auto 30px;"></div>
        <div style="display:grid; grid-template-columns:repeat(3,1fr); gap:16px;">
          <div style="height:80px; background:rgba(0,242,255,0.12); border-radius:12px;"></div>
          <div style="height:80px; background:rgba(0,242,255,0.12); border-radius:12px;"></div>
          <div style="height:80px; background:rgba(0,242,255,0.12); border-radius:12px;"></div>
        </div>
      </div>
    </div>

    <!-- Real Content -->
    <div id="content">
      <div class="card">
        <div class="card-content">
          <div class="card-header">
            <h3 class="card-title">AFK Earnings</h3>
            <div class="card-icon"><i class="fas fa-coins"></i></div>
          </div>
          <div class="afk-container">
            <div class="afk-icon"><i class="fas fa-couch"></i></div>
            <h1 class="afk-title">AFK Earnings</h1>
            <p class="afk-subtitle">Keep this tab open and earn coins passively. Maximize earnings by staying AFK!</p>

            <div class="progress-container">
              <div class="progress-bar">
                <div class="progress-fill" id="progress-fill"></div>
              </div>
              <div class="progress-text">
                <span>Session Progress</span>
                <span id="progress-percent">0%</span>
              </div>
            </div>

            <div class="afk-stats">
              <div class="stat-card">
                <div class="stat-value" id="arciotimer">60</div>
                <div class="stat-label">Seconds Left</div>
              </div>
              <div class="stat-card">
                <div class="stat-value" id="arciogainedcoins">0</div>
                <div class="stat-label">Coins Earned</div>
              </div>
              <div class="stat-card">
                <div class="stat-value" id="sessionDuration">-</div>
                <div class="stat-label">Session Time</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Enhanced Particle Background with Mouse Interaction
    document.addEventListener('DOMContentLoaded', () => {
      const canvas = document.getElementById('bg-canvas');
      const ctx = canvas.getContext('2d');
      let width, height, particles = [], mouse = { x: 0, y: 0 };

      const resize = () => {
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
      };
      resize();
      window.addEventListener('resize', resize);

      class Particle {
        constructor() {
          this.reset();
          this.color = `hsl(${200 + Math.random() * 60}, 100%, 70%)`;
        }
        reset() {
          this.x = Math.random() * width;
          this.y = Math.random() * height;
          this.vx = (Math.random() - 0.5) * 0.8;
          this.vy = (Math.random() - 0.5) * 0.8;
          this.size = Math.random() * 2 + 1;
          this.life = 1;
        }
        update() {
          this.x += this.vx;
          this.y += this.vy;
          if (this.x < 0 || this.x > width) this.vx *= -1;
          if (this.y < 0 || this.y > height) this.vy *= -1;
        }
        draw() {
          ctx.beginPath();
          ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
          ctx.fillStyle = this.color;
          ctx.globalAlpha = this.life;
          ctx.fill();
        }
      }

      for (let i = 0; i < 120; i++) particles.push(new Particle());

      canvas.addEventListener('mousemove', e => {
        mouse.x = e.clientX;
        mouse.y = e.clientY;
      });

      function animate() {
        ctx.fillStyle = 'rgba(11, 11, 30, 0.05)';
        ctx.fillRect(0, 0, width, height);

        particles.forEach(p => {
          const dx = p.x - mouse.x;
          const dy = p.y - mouse.y;
          const dist = Math.sqrt(dx*dx + dy*dy);
          if (dist < 120) {
            p.vx += dx * 0.0005;
            p.vy += dy * 0.0005;
          }
          p.update();
          p.draw();

          particles.forEach(q => {
            if (p === q) return;
            const dx2 = p.x - q.x;
            const dy2 = p.y - q.y;
            const dist2 = Math.sqrt(dx2*dx2 + dy2*dy2);
            if (dist2 < 140) {
              ctx.beginPath();
              ctx.strokeStyle = `rgba(0, 242, 255, ${0.2 * (1 - dist2/140)})`;
              ctx.lineWidth = 0.8;
              ctx.moveTo(p.x, p.y);
              ctx.lineTo(q.x, q.y);
              ctx.stroke();
            }
          });
        });

        requestAnimationFrame(animate);
      }
      animate();

      // Show content after load
      setTimeout(() => {
        document.getElementById('skeleton').style.display = 'none';
        document.getElementById('content').style.opacity = '1';
        document.body.classList.add('loaded');
      }, 400);

      // Progress bar update
      const updateProgress = () => {
        const timer = parseInt(document.getElementById('arciotimer')?.textContent || '60');
        const percent = ((60 - timer) / 60) * 100;
        document.getElementById('progress-fill').style.width = `${percent}%`;
        document.getElementById('progress-percent').textContent = `${Math.round(percent)}%`;
      };

      const observer = new MutationObserver(updateProgress);
      const timerEl = document.getElementById('arciotimer');
      if (timerEl) observer.observe(timerEl, { childList: true, characterData: true });

      updateProgress();
      setInterval(updateProgress, 1000);
    });
  </script>
</body>
</html>
